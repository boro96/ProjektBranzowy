@model IEnumerable<ProjektBranzowy.Models.LogHistory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6">
            Create new Item
        </div>
    </div>
    <br />

</div>

@using (Html.BeginForm())
{
<p>
    Find by room name: @Html.TextBox("searchRoomName")<br />
    Find by name: @Html.TextBox("searchName")<br />
    Find by surname: @Html.TextBox("searchSurname")<br />
    Find by Entry:
    @Html.TextBox("searchEntryDate", String.Format("{0:dd/MM/yyyy}", ""), new { @class = "datefield", type = "date" })
    @Html.TextBox("searchEntryTime", String.Format("{0:HH:mm}", ""), new { @class = "datefield", type = "time" })
    Find by Exit:
    @Html.TextBox("searchExitDate", String.Format("{0:dd/MM/yyyy}", ""), new { @class = "datefield", type = "date" })
    @Html.TextBox("searchExitTime", String.Format("{0:HH:mm}", ""), new { @class = "datefield", type = "time" })


    <input type="submit" value="Search" />
</p>
}

@if (Model.Count() > 0)
{

    <table class="table table-dark table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("RoomName", "Index", new { sortOrder = ViewBag.RoomNameParm })
                </th>
                <th>
                    @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameParm })
                </th>
                <th>
                    @Html.ActionLink("Surname", "Index", new { sortOrder = ViewBag.SurnameParm })
                </th>
                <th>
                    @Html.ActionLink("Entry", "Index", new { sortOrder = ViewBag.EntryParm })
                </th>
                <th>
                    @Html.ActionLink("Exit", "Index", new { sortOrder = ViewBag.ExitParm })
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var logHistory in Model)
            {
                <tr>
                    <td>@logHistory.Room.Name</td>
                    <td>@logHistory.User.Name</td>
                    <td>@logHistory.User.Surname</td>
                    <td>@logHistory.In</td>
                    <td>@logHistory.Out</td>

                </tr>
            }
        </tbody>



    </table>
}
else
{
    <p>No Users created yet</p>
}



